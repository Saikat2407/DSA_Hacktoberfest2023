#include <iostream>
#include<bits/stdc++.h>
using namespace std;

int lps(string &s){
        int n=s.size();
        vector<vector<int>>dp(n,vector<int>(n,0));
        int len=0;
        for(int g=0;g<n;g++){
            for(int i=0,j=g;j<n;i++,j++){
                if(g==0){
                    dp[i][j]=1;
                }else if(g==1){
                    if(s[i]==s[j]) dp[i][j]=1;
                    else dp[i][j]=0;
                }else{
                    if(s[i]==s[j]&&dp[i+1][j-1]==1) dp[i][j]=1;
                    else dp[i][j]=0;
                }
                if(dp[i][j]) len=g+1;
            }
        }
        return len;
}
int main() {
	string s;
	cin>>s;
	cout<<lps(s)<<endl;
}
